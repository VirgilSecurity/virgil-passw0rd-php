<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="tests">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>f</group>
            <group>vcf</group>
            <group>mdbf</group>
        </exclude>
    </groups>
</phpunit>